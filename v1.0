<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TinQwise Bonus Tracker 2025</title>
  <style>
    body {
      font-family: Rethink Sans, sans-serif;
      background: #8B0000;
      color: #000000;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }
    .container {
      width: 80%;
      max-width: 1000px;
      background: white;
      border: 2px solid #000000;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
      text-align: center;
      color: #8B0000;
    }
    .progress-bar-container {
      margin: 20px 0;
      background: #e0e0e0;
      border-radius: 20px;
      overflow: hidden;
      height: 30px;
    }
    .progress-bar {
      height: 100%;
      width: 0%;
      background: linear-gradient(90deg, #f06200, #fc9c1a);
      transition: width 0.5s;
    }
    .milestones {
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
    }
    .milestone {
      text-align: center;
      width: 18%;
    }
    .milestone img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin-bottom: 5px;
    }
    .milestone span {
      font-size: 14px;
    }
    .controls {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 20px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:active {
      transform: scale(0.98);
    }
    #increase {
      background: #4CAF50;
      color: white;
    }
    #decrease {
      background: #f44336;
      color: white;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>TinQwise Bonus Tracker '25</h1>
    <div class="progress-bar-container">
      <div class="progress-bar" id="progress-bar"></div>
    </div>
    <div class="milestones">
      <div class="milestone" id="milestone1">
        <img src="https://via.placeholder.com/50" alt="Milestone">
        <span>Luxe Kerstfeest</span>
      </div>
      <div class="milestone" id="milestone2">
        <img src="https://via.placeholder.com/50" alt="Milestone">
        <span>BelgiÃ«</span>
      </div>
      <div class="milestone" id="milestone3">
        <img src="https://via.placeholder.com/50" alt="Milestone">
        <span>Portugal</span>
      </div>
      <div class="milestone" id="milestone4">
        <img src="https://via.placeholder.com/50" alt="Milestone">
        <span>Wintersport</span>
      </div>
      <div class="milestone" id="milestone5">
        <img src="https://via.placeholder.com/50" alt="Milestone">
        <span>Corfu</span>
      </div>
    </div>
    <div class="controls">
      <button id="decrease">-</button>
      <button id="increase">+</button>
    </div>
  </div>

  <script>
    // Milestone percentages
    const milestones = [
      { id: 'milestone1', percentage: 20 },
      { id: 'milestone2', percentage: 40 },
      { id: 'milestone3', percentage: 60 },
      { id: 'milestone4', percentage: 80 },
      { id: 'milestone5', percentage: 100 }
    ];

    const progressBar = document.getElementById('progress-bar');
    const increaseButton = document.getElementById('increase');
    const decreaseButton = document.getElementById('decrease');

    let progressPercentage = 0;

    // Update progress bar and milestones
    function updateProgress() {
      // Beperk de waarde tussen 0 en 100
      progressPercentage = Math.max(0, Math.min(100, progressPercentage));
      progressBar.style.width = `${progressPercentage}%`;

      milestones.forEach((milestone) => {
        const milestoneElement = document.getElementById(milestone.id);
        milestoneElement.style.opacity =
          progressPercentage >= milestone.percentage ? '1' : '0.3';
      });
    }

    // Event Listeners voor knoppen
    increaseButton.addEventListener('click', () => {
      progressPercentage += 10;
      updateProgress();
    });

    decreaseButton.addEventListener('click', () => {
      progressPercentage -= 10;
      updateProgress();
    });

    // Initialize progress
    updateProgress();
  </script>
</body>
</html>
